<h4 class="read-message">Update your library?</h4>

<% if @current_read_status != nil %>
  <div class="read-status <%= @current_read_status %>">
<% else %>
  <div class="read-status">
<% end %>

  <%= render partial: "books/read_status_form", locals: {book: book, read_status: "want_to_read", read_status_string: "Want to Read"} %>
  <%= render partial: "books/read_status_form", locals: {book: book, read_status: "currently_reading", read_status_string: "Currently Reading"} %>
  <%= render partial: "books/read_status_form", locals: {book: book, read_status: "finished_reading", read_status_string: "Finished Reading"} %>
</div>
