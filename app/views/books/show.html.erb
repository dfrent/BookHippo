<main>
  <h2 class="book-title"> <%= @book.title %> </h2>
  <h4> <%= @book.author %> </h4>
  <img src="<%= @book.book_cover %>" alt="<%= @book.title %>">

  <%= link_to "Share this book?", conversations_path(share: @book.isbn) %>
  <p>Page Count: <%= @book.page_count %> </p>
  <p>Rating: <%= @book.average_rating%> </p>

  <% if logged_in? %>
    <%= render partial: "books/read_status", locals: {book: @book, existing_list: @existing_list} %>
  <% else %>
    <%= render partial: "books/new_user_buttons" %>
  <% end %>

  <div class="description">
    <p>Description: <%= @book.description %> </p>
  </div>

  <div class="review-wrapper">
  <% if logged_in? && @existing_list && @existing_list.read_status == "finished_reading" %>
    <%= render partial: "reviews/reviews_form", locals: {book: @book, review: @review}%>
    <% else %>
  <% end %>
</div>
</main>
