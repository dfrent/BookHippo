<h3>Books</h3>
<div class="search-book-container">

<% books.each do |book| %>
  <!-- <h4><%#= link_to "#{book[:title].titleize}", book_path(book[:isbn]) %></h4> -->

  <div class="book-container card item search-book-item">
    <%= link_to(image_tag(book[:book_image], class:"card-img-top", title: book[:title].titleize), book_path(book[:isbn])) %>
    <div class="card-body book-info">
      <p class="card-title"><strong><%= book[:title].titleize.strip %></strong> | <%= book[:author] %>  </p>
    </div>
  </div>
<% end %>
</div>
