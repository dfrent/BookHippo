<% if logged_in? %>
  <div class="stats">
    <h4> <%= user.username.capitalize %> </h4>
    <p>
      <strong class="stat following">
        <%= user.following.count %>
      </strong>
      following
      <span>|</span>
      <strong class="stat followers">
        <%= user.followers.count %>
      </strong>
      followers
    </p>
  </div>
<% end %>
