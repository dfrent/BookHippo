<%= form_for [book_club, message], remote: true, authenticity_token: true do |f| %>
  <%= f.label :your_message %>:
  <%= f.text_area :body, class: "form-control", data: {textarea: "message"} %>

  <%= f.hidden_field :book_club_id, value: book_club.id %>
  <%= f.submit "send", class: "btn btn-primary", data: {send: "message"} %>
<% end %>
