<style type="text/css">
  .share-div {
    width: 400px;
    margin: 0;
    overflow: auto;
    border: 1px solid #0f0;
    padding: 2px;
    text-align: justify;
    background: transparent;
  }
</style>

<% if @over_ten %>
  <%= link_to 'Show Previous', '?m=all' %>
<% end %>

<div class='ui segment'>
  <% @messages.each do |message| %>
    <% if message.body %>
      <% user = User.find(message.user_id) %>
      <div class="item">
        <div class="content">
          <div class="header">
            <strong>
              <%= user.username %>
            </strong>
            <%= message.message_time %>
          </div>
          <div class="message-item">
            <%= message.body %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= form_for [@conversation, @message], html: {class: "ui reply form"} do |f| %>
  <div class="field">

  <%= f.hidden_field :body, class: "form-share" %>

  <% if params[:share] != nil %>
    <div contenteditable="true", class="share-div">
      <%= link_to "I thought you would enjoy this book!", book_path(params[:share]) %>
    </div>
  <% end %>

  </div>
  <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
  <div>
    <%= f.submit "Add Reply", class: "message-submit" %>
  </div>
<% end %>

<%= link_to "Back", conversations_path %>
