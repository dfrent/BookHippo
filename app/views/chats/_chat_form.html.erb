<%= form_for chat, remote: true, authenticity_token: true do |f| %>
  <%= f.label :your_chat %>:
  <%= f.text_area :body, class: "form-control", data: {textarea: "chat"} %>

  <%= f.hidden_field :book_club_id, value: book_club.id %>
  <%= f.submit "send", class: "btn btn-primary", data: {send: "chat"} %>
<% end %>
