user_data_selector = ".user-data-" + "<%= @user.id %>";

follow_form = document.querySelector(user_data_selector + "  #follow_form");

follow_form.innerHTML = "<%= escape_javascript(render partial: 'users/unfollow', locals: {user: @user}) %>";

followers = document.querySelector(user_data_selector + ' .other-user-stats .followers');
followers.innerHTML = '<%= @user.followers.count %>';

current_user_following = document.querySelector('.current-user-stats .following');
current_user_following.innerHTML = '<%= current_user.following.count %>';
