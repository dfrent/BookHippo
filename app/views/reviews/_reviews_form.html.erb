<h4>Rate This Book</h4>

<%= render partial: "reviews/rating", locals: {book: @book, rating: @rating}%>

<h4>Add A Review</h4>

<p>
  <%= form_for [book, review] do |f| %>
  <%= f.text_area :comment %>
  <div class="sumbit-review-btn">
    <%= f.submit  %>
  </div>
</p>
<% end %>


  <div class="review-container">
    <h4>Reviews</h4>
    <ul class="post-list">
      <% @reviews.each do |post|%>
          <% unless post == nil %>
            <span class="post-username"><strong><%= post.username_display %></strong></span>
            <span class="post-time"><%= post.review_time %></span>
            <li class="list-review"> <%= post.comment %> </li>
          <% end %>
      <% end %>
    </ul>
  </div>
