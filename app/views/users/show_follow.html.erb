<%= link_to "Back", user_path(@user), class: "btn user-show-btn" %>

<div class="col-md-8">
  <h3><%= @title %></h3>
  <% if @users.any? %>

    <ul class="users follow">
      <% @users.each do |user| %>
        <li class="relationship-card">
          <a href="<%= user_path(user) %>" class="username"><%= user.username %></a>
          <p class="title">Check out a sample from their library:</p>
          <div class="book-show">
            <%= render partial: "books/single_book", locals: {book: user.one_of_their_books} %>
          </div>
          <%=  %>
        </li>
      <% end %>
    </ul>

  <% end %>
</div>
