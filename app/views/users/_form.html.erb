<%= form_for @user do |f| %>

<%= render partial: "shared/errors", locals: { errors: @user.errors }  %>

  <div class='field'>
    <%= f.label :username %>
    <%= f.text_field :username%>
  </div>

  <div class='field'>
    <%= f.label :email %>
    <%= f.email_field :email%>
  </div>

  <div class='field'>
    <%= f.label :password %>
    <%= f.password_field :password%>
  </div>

  <div class='field'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation%>
  </div>

  <%= f.submit 'Submit Form' %>

<% end %>
